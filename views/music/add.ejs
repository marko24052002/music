<%- include('../partials/header', { title: 'Add Song', user: typeof user !== 'undefined' ? user : null }) %>

<div class="category-page" style="background: linear-gradient(135deg, #4a148c, #7b1fa2);">
    <div class="container">
        <a href="javascript:history.back()" class="back-btn">‚Üê Back</a>
        <div class="category-header">
            <h1>Add New Song</h1>
        </div>
        
        <div class="songs-container">
            <form action="/music/song/add" method="POST">
                <div class="form-group">
                    <label for="title">Song Title</label>
                    <input type="text" id="title" name="title" required>
                </div>
                
                <div class="form-group">
                    <label for="artist">Artist</label>
                    <input type="text" id="artist" name="artist" required>
                </div>
                
                <div class="form-group">
                    <label for="category">Category</label>
                    <select id="category" name="category" required>
                        <option value="">Select Category</option>
                        <option value="unstoppable">Unstoppable</option>
                        <option value="help">Help</option>
                        <option value="whats-with-the-world">What's With The World</option>
                        <option value="wonderful-world">Wonderful World</option>
                    </select>
                </div>
                
                <div class="form-group">
                    <label for="youtubeUrl">YouTube URL (optional)</label>
                    <input type="url" id="youtubeUrl" name="youtubeUrl">
                </div>
                
                
                
                <div class="form-actions">
                    <button type="submit" class="btn btn-primary">Add Song</button>
                    <a href="/" class="btn btn-outline">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

<%- include('../partials/footer') %>